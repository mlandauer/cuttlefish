%h3 Set your name and password

= form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f|
  = devise_error_messages!
  = f.hidden_field :invitation_token

  .control-group
    = f.label :name
    = f.text_field :name, class: "login-field", placeholder: "Name"
    %span.login-field-icon.fui-heart-16

  .control-group
    = f.label :password
    = f.password_field :password, class: "login-field", placeholder: "Password"
    %span.login-field-icon.fui-lock-16

  = f.submit "Set my name and password", class: "btn btn-primary btn-large btn-block"
